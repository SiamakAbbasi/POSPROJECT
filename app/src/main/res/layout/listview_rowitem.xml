<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp" android:layout_marginLeft="5dp">


        <ImageView android:layout_width="40dp" android:layout_marginTop="20dp"
                   android:layout_height="40dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:id="@+id/row_img_plus" android:src="@drawable/ic_plus_green" />
        <ImageView android:layout_width="40dp" android:layout_marginTop="20dp"
                   android:layout_height="40dp" android:src="@drawable/ic_minus_red" android:id="@+id/row_img_minus"/>
    <TextView android:layout_width="70dp" android:layout_marginLeft="15dp" android:layout_height="70dp"
              android:textSize="25dp"  android:id="@+id/row_hashtag_num"
              android:layout_marginTop="20dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <TextView android:layout_width="match_parent" android:layout_marginTop="20dp"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorDarkGray" android:id="@+id/row_hashtag_title"
                  android:textSize="20sp" android:textStyle="bold|italic"
        />

    </LinearLayout>


</LinearLayout>